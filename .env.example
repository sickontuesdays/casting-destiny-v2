# Casting Destiny v2 Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===============================================
# NextAuth.js Configuration
# ===============================================
# The URL of your application (used for OAuth redirects)
NEXTAUTH_URL=http://localhost:3000

# Secret used to encrypt JWT tokens (generate a random string)
# You can generate one at: https://generate-secret.now.sh/32
NEXTAUTH_SECRET=your-nextauth-secret-here-32-characters-minimum

# ===============================================
# Bungie API Configuration
# ===============================================
# Register your app at: https://www.bungie.net/en/Application
# Choose "Confidential" OAuth Client Type

# Your Bungie application's OAuth Client ID
BUNGIE_CLIENT_ID=your-bungie-client-id

# Your Bungie application's OAuth Client Secret
BUNGIE_CLIENT_SECRET=your-bungie-client-secret

# Your Bungie API Key (also from the application page)
BUNGIE_API_KEY=your-bungie-api-key

# ===============================================
# Admin Configuration
# ===============================================
# Password for accessing the admin panel
# Use a strong, unique password
ADMIN_PASSWORD=your-secure-admin-password

# ===============================================
# Database Configuration (Optional)
# ===============================================
# For production deployments, you can use a database
# In development, the app uses file-based storage
DATABASE_URL=file:./data/casting-destiny.db

# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/casting_destiny

# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/casting_destiny

# ===============================================
# Environment Configuration
# ===============================================
# Set to "production" for production deployments
NODE_ENV=development

# ===============================================
# Deployment Configuration (Optional)
# ===============================================
# For Vercel deployments
VERCEL=false

# For standalone deployments
DEPLOY_TARGET=default

# ===============================================
# Logging Configuration (Optional)
# ===============================================
# Set log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug logging for specific modules
DEBUG=false

# ===============================================
# Feature Flags (Optional)
# ===============================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable detailed error reporting
ENABLE_ERROR_REPORTING=false

# Enable analytics (if implemented)
ENABLE_ANALYTICS=false

# ===============================================
# Rate Limiting (Optional)
# ===============================================
# API rate limiting configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# ===============================================
# Cache Configuration (Optional)
# ===============================================
# Manifest cache duration (in seconds)
MANIFEST_CACHE_DURATION=3600

# Build cache duration (in seconds)
BUILD_CACHE_DURATION=1800

# ===============================================
# Security Configuration (Optional)
# ===============================================
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Session cookie settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax
SESSION_COOKIE_MAX_AGE=604800

# ===============================================
# External Services (Optional)
# ===============================================
# If you want to use external services for enhanced features

# Sentry DSN for error tracking
SENTRY_DSN=

# Google Analytics ID
GA_TRACKING_ID=

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=

# ===============================================
# Development Tools (Development Only)
# ===============================================
# Enable Next.js development features
NEXT_PUBLIC_DEVELOPMENT_MODE=true

# Show debug information in UI
NEXT_PUBLIC_SHOW_DEBUG=false

# Skip authentication in development (NOT for production)
SKIP_AUTH_IN_DEV=false

# ===============================================
# Performance Configuration (Optional)
# ===============================================
# Maximum number of builds per user
MAX_BUILDS_PER_USER=50

# Maximum file upload size (in bytes)
MAX_UPLOAD_SIZE=10485760

# Worker pool size for background tasks
WORKER_POOL_SIZE=2

# ===============================================
# Backup Configuration (Optional)
# ===============================================
# Backup frequency (in hours)
BACKUP_FREQUENCY=24

# Backup retention (in days)
BACKUP_RETENTION_DAYS=7

# Backup storage location
BACKUP_STORAGE_PATH=./backups